<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>AuthenticationController</servlet-name>
        <servlet-class>controller.AuthenticationController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CalendarController</servlet-name>
        <servlet-class>controller.CalendarController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SingleAttendanceController</servlet-name>
        <servlet-class>controller.SingleAttendanceController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TakeAttendanceController</servlet-name>
        <servlet-class>controller.TakeAttendanceController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GroupAttendance</servlet-name>
        <servlet-class>controller.GroupAttendance</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AttendanceController</servlet-name>
        <servlet-class>controller.AttendanceController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AuthenticationController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CalendarController</servlet-name>
        <url-pattern>/Calendar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SingleAttendanceController</servlet-name>
        <url-pattern>/singleattendance</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TakeAttendanceController</servlet-name>
        <url-pattern>/takeattendance</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GroupAttendance</servlet-name>
        <url-pattern>/gr_attendance</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AttendanceController</servlet-name>
        <url-pattern>/attendance</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
